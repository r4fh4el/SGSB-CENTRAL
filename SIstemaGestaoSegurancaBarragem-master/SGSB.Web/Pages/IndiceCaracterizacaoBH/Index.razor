@code {
    Variant variant = Variant.Outlined;

    private List<IndiceCaracterizacaoBH> lstIndiceCaracterizacaoBH;
    public IndiceCaracterizacaoBH objIndiceCaracterizacaoBH = new IndiceCaracterizacaoBH();
    private double indiceCircularidade;
    private double fatorForma;
    /// <summary>
    /// Coeficiente de compacidade (Kc) - Lima (1969)
    /// </summary>
    private double coeficienteCompacidade;
    /// <summary>
    /// Densidade de drenagem (Dd) - Horton (1945)
    /// </summary>
    private double densidadeDrenagem;

    //// <summary>
    /// Coeficiente de manutenção (Cm)
    /// </summary>
    private double coeficienteManutencao;

    //// <summary>
    /// Sinuosidade do curso d’água principal (S) - Schumm (1963)
    /// </summary>
    private double sinuosidadeCurso;
    //// <summary>
    /// Gradiente de canais (Gc)
    /// </summary>
    private double gradienteCanais;

    //// <summary>
    /// Relação de relevo (Rr)  - Christofoletti
    /// </summary>
    private double relacaoRelevo;
    //// <summary>
    /// Índice de rugosidade (IR) - Christofoletti (1969)
    /// </summary>
    private double indiceRugosidade;

    int idBarragemIndice = 0;
    bool flagBarragem = false;
    private List<Barragem> lstBarragem;

    protected override async Task OnInitializedAsync()
    {
        lstBarragem = new List<Barragem>();
        lstBarragem = await BarragemService.GetBarragemAsync();


    }
    protected async Task Salvar()
    {
        //////=12,57*((C5/C6^2))
        indiceCircularidade = 12.57 * (objIndiceCaracterizacaoBH.AreaBaciaHidrografica / Math.Pow(objIndiceCaracterizacaoBH.Perimetro, 2));
        //////=C5/(C14^2)
        fatorForma = objIndiceCaracterizacaoBH.Perimetro / Math.Pow(objIndiceCaracterizacaoBH.ComprimentoAxialBacia, 2);
        //////=0,28*(C6/RAIZ(C5))
        coeficienteCompacidade = 0.28 * (objIndiceCaracterizacaoBH.Perimetro / Math.Sqrt(objIndiceCaracterizacaoBH.AreaBaciaHidrografica));
        //////=C9/C5
        densidadeDrenagem = objIndiceCaracterizacaoBH.ComprimentoTotalRioBacia / objIndiceCaracterizacaoBH.AreaBaciaHidrografica;

        //////=1/E22 teste 2
        coeficienteManutencao = 1 / densidadeDrenagem;


        //////=(C11/(C7*1000))*100
        gradienteCanais = (objIndiceCaracterizacaoBH.AltitudeMaximaBacia / (objIndiceCaracterizacaoBH.ComprimentoRioPrincipal * 1000)) * 100;
        //////=C12/(C7)
        relacaoRelevo = objIndiceCaracterizacaoBH.AltitudeMaximaBacia / (objIndiceCaracterizacaoBH.ComprimentoRioPrincipal);
        //////=E22*C13   | =C12/1000
        indiceRugosidade = objIndiceCaracterizacaoBH.AltitudeAltimetricaBaciaM / 1000;

        //////=C7/C8
        sinuosidadeCurso = objIndiceCaracterizacaoBH.ComprimentoRioPrincipal / objIndiceCaracterizacaoBH.ComprimentoVetorialRioPrincipal;

        var indiceCaracterizacaoBH = new IndiceCaracterizacaoBHModel()
        {
            
                AltitudeAltimetricaBaciaKM = objIndiceCaracterizacaoBH.AltitudeAltimetricaBaciaKM ,
                AltitudeAltimetricaBaciaM = objIndiceCaracterizacaoBH.AltitudeAltimetricaBaciaM,
                AltitudeMaximaBacia = objIndiceCaracterizacaoBH.AltitudeMaximaBacia,
                AltitudeMinimaBacia = objIndiceCaracterizacaoBH.AltitudeMinimaBacia,
                AltitudeVetorialRioPrincipal = objIndiceCaracterizacaoBH.AltitudeVetorialRioPrincipal,
                AreaBaciaHidrografica = objIndiceCaracterizacaoBH.AreaBaciaHidrografica,
                Barragem_ID = idBarragemIndice,
                ComprimentoAxialBacia = objIndiceCaracterizacaoBH.ComprimentoAxialBacia,
                ComprimentoRioPrincipal = objIndiceCaracterizacaoBH.ComprimentoAxialBacia,
                ComprimentoTotalRioBacia = objIndiceCaracterizacaoBH.ComprimentoAxialBacia,
                ComprimentoVetorialRioPrincipal = objIndiceCaracterizacaoBH.ComprimentoAxialBacia,
                Perimetro = objIndiceCaracterizacaoBH.Perimetro,
                ResultadoCoeficienteCompacidade = coeficienteCompacidade,
                ResultadoCoeficienteManutencao = coeficienteManutencao,
                ResultadoDensidadeDrenagem = densidadeDrenagem,
                ResultadoFatorForma = fatorForma,
                ResultadoGradienteCanais = gradienteCanais,
                ResultadoIndiceCircularidade = indiceCircularidade,
                ResultadoIndiceRugosidade = indiceRugosidade,
                ResultadoRelacaoRelevo = relacaoRelevo,
                ResultadoSinuosidadeCursoDagua = sinuosidadeCurso
        };

        var resultado = await IndiceCaracterizacaoBHService.GetIndiceCaracterizacaoBH();
        var resultadoFiltrado = resultado.Where(x => x.Barragem_ID == idBarragemIndice).Count() > 0;

        if (resultadoFiltrado && resultado.Count() > 0)
        {
            indiceCaracterizacaoBH.Id = resultado.Find(x => x.Barragem_ID == idBarragemIndice).Id;
            await IndiceCaracterizacaoBHService.EditarIndiceCaracterizacaoBH(indiceCaracterizacaoBH);
        }
        else
        {
 
            await IndiceCaracterizacaoBHService.CadastrarIndiceCaracterizacaoBH(indiceCaracterizacaoBH);
        }

    }

    protected void Submit(IndiceCaracterizacaoBH arg)
    {
        //
    }
}

